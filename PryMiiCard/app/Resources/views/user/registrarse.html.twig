{% extends "::user.html.twig" %}
{% block titulo %}Crear una Cuenta{% endblock %}
{% block cuerpo %}

 <div id="mensaje">
 {% for flash_message in app.session.flashBag.get('error') %}
        <div class="flash-error alert alert-danger" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
            {{ flash_message | upper }}
        </div>
      {% endfor %}
 </div>
      
<div class="row">
	{% if form is defined %}
        {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}
    		{% form_theme form 'bootstrap_3_layout.html.twig' %}
         		<div <div class="col-xs-12 col-sm-12 col-md-6">
         			<div class="form-group col-xs-12 col-md-6">
        				<label for="exampleInputPassword1">Nombre</label>
    		                {{ form_widget(form.nombre) }}
    		                {{ form_errors(form.nombre) }}
    		     	</div>
    		     	<div class="col-xs-12 col-md-6">
        				<div class="form-group">
        					<label for="exampleInputPassword1">Apellido</label>
                     		{{ form_widget(form.apellido) }}
                     		{{ form_errors(form.apellido) }}
                     	</div>
                    </div>
                    	<div class="form-group col-md-12">
                    		<label for="exampleInputPassword1">Fecha de Nacimiento</label>
                     		    {{ form_widget(form.fechanacim) }}
                     		    {{ form_errors(form.fechanacim) }}
                     	</div>
                     	<div class="form-group col-md-12">
                    		<label for="exampleInputPassword1">Tu Foto</label>
                     		    {{ form_widget(form.foto) }}
                     		    {{ form_errors(form.foto) }}
                     	</div>
                     	<div class="form-group col-xs-12 col-md-6">
        					<label for="exampleInputPassword1">Cedula</label>
                     		    {{ form_widget(form.cedula) }}
                     		    {{ form_errors(form.cedula) }}
                     	</div>
                     	<div class="col-xs-12 col-md-6">
        					<div class="form-group">
        						<label for="exampleInputPassword1">Celular / Telefono</label>
                     	        {{ form_widget(form.telefono) }}
                     	        {{ form_errors(form.telefono) }}
                     	    </div>
                     	</div> 
                     	<div class="form-group col-md-12">
        					<label for="exampleInputPassword1">email</label> 
                     		    {{ form_widget(form.email) }}
                     		    {{ form_errors(form.email) }}
                     	</div>
                     	<div class="form-group col-md-12">
        					<label for="exampleInputPassword1">Nombre de usuario</label>
                     		    {{ form_widget(form.username) }}
                     		    {{ form_errors(form.username) }}
                     	</div>
                     	<div class="form-group col-xs-12 col-md-6">
        					<label for="exampleInputPassword1">Contrase単a</label>
                     		    {{ form_widget(form.plainPassword.first) }}
                     		    {{ form_errors(form.plainPassword.first) }}
                     	</div>
                     	<div class="col-xs-12 col-md-6">
        					<div class="form-group">
        						<label for="exampleInputPassword1">Verificar Contrase単a</label>
                     		        {{ form_widget(form.plainPassword.second) }}
                     		        {{ form_errors(form.plainPassword.second) }}
                     		</div>
                     	</div>
                     	<div class="row col-md-5 col-xs-4 col-sm-4 col-md-offset-5 col-sm-offset-4 col-xs-offset-3 ">
         		            {{ form_widget(form.Registrar) }}
         		        </div>
         		</div>
     	{{ form_end(form) }}
     {% endif %}
     
     
