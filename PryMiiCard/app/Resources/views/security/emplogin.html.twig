{% extends "::basenull.html.twig" %}
{% block title %}Empresa-Login!{% endblock %}
{% block body %}
        <div class="page-header">
            <h1>Inicio de Sesion</h1>
            <h2>Empresa</h2>
        </div>
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('emplogin') }}" method="post" novalidate="novalidate">
            <div class="form-group">
                <label for="username"><i class="fa fa-user-circle fa-2x" aria-hidden="true"></i>Usuario:</label>
                {% if value is defined%}
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}"/>
                {% elseif value is not defined %}
                    <input class="form-control" type="text" id="username" name="_username" />
                {% endif %}
            </div>
            <div class="form-group">
                <label for="password"><i class="fa fa-key fa-2x" aria-hidden="true"></i>  Password:</label>
                <input class="form-control" type="password" id="password" name="_password" />
            </div>
            <button type="submit" class="btn btn-primary">Ingresar</button>
            <a href="{{ path('user_register') }}">Registrarme</a>
        </form>
{% endblock %}
