{% extends "::promociones.html.twig"%}
{% block title %}Promociones{% endblock %}
{% block titulo %} Administracion de Promociones{%  endblock %}
{% block cuerpo %}

    <div class ="row">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#ingreso" aria-controls="ingreso" role="tab" data-toggle="tab">Ingreso</a></li>
            <li role="presentation"><a href="#modificacion" aria-controls="modificacion" role="tab" data-toggle="tab">Modificacion</a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="ingreso">
                {{ form_start(form) }}
                {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
                <form>
                    <div class="form-group">
                        {{ form_row(form.titProm) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.detProm) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.tipProm) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.numProm) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.preProm) }}
                    </div>
                </form>
                {{ form_end(form) }}
            </div>
            <div role="tabpanel" class="tab-pane" id="modificacion">...</div>
        </div>
    </div>

{% endblock %}