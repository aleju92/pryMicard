{% extends 'base.html.twig' %}

{% block body %}

    {% for flashMessage in app.session.flashbag.get('mensaje') %}
        <div class="alert alert-warning alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <strong>{{flashMessage}}</strong>
        </div>
    {% endfor %}
    <center>
    <h1 class="jumbotron" style="background-color: green; opacity: 0.5; color: #fff">Datos de la Empresa: {{ empresa.nomEmp }}</h1>
    <DIV style="width: 40%">
    
    

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ empresa.id }}</td>
            </tr>
            <tr>
                <th>Nombre de la Empresa</th>
                <td>{{ empresa.nomEmp }}</td>
            </tr>
            <tr>
                <th>Usuario</th>
                <td>{{ empresa.usuEmp }}</td>
            </tr>
            <tr>
                <th>Contrase√±a</th>
                <td>{{ empresa.pasEmp }}</td>
            </tr>
            <tr>
                <th>Ruc</th>
                <td>{{ empresa.rucEmp }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ empresa.tlfEmp }}</td>
            </tr>
            <tr>
                <th>Pagina Web</th>
                <td>{{ empresa.webEmp }}</td>
            </tr>
            <tr>
                <th>Logo de la Empresa</th>
                <td><img style="max-width: 100px" class=" img-thumbnail" src="{{ empresa.logEmp }}" alt="logoEmp"></td>
            </tr>
            <tr>
                <th>Slogan de la Empresa</th>
                <td>{{ empresa.slgEmp }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{% if empresa.estEmp == 1 %}
                    Activo
                    {% else %}
                    Inactivo
                    {% endif %}</td>
            </tr>
        </tbody>
    </table>
    </div>
    <ul>
        
        <br>
        <li>
            <a style="width: 300px"  class="btn btn-primary" href="{{ path('empresa_edit', { 'id': empresa.id }) }}">Editar Empresa</a><br>
        </li>
        <br>
        <li>
            <a style="width: 300px" class="btn btn-default"  href="{{ path('empresa_index') }}">Regresar a la lista</a><br>
        </li>
        <br>
        <li>
            {{ form_start(delete_form) }}
                <input style="width: 300px" class="btn btn-danger" type="submit" value="Borrar">
            {{ form_end(delete_form) }}
        </li>
    </ul>
    <br><br>
      </center>
{% endblock %}
