{% extends "::user.html.twig" %}
{% block titulo %}Crear una Cuenta{% endblock %}
{% block cuerpo %}
<div class="row">
	<h2>Nombre de Usuario</h2>
   
     <div class ="row">
     <div id="mensaje">
     	<p>{{ menssaje }}</p>
     </div>
      
      <!-- Tab panes -->
      <div class="tab-content">
        <div role="tabpanel"  id="ingreso">
        	<form>
              <div class="form-group">
                <label >Nombre</label>
                <input type="text" class="form-control" id="name" placeholder="ingrese un nombre">
                <label >Apellido</label>
                <input type="text" class="form-control" id="lastname" placeholder="ingrese un apellido">
                <label >Cedula</label>
                <input type="text" class="form-control" id="cedula" placeholder="ingrese su cedila de identidad">
                <label >E-mail</label>
                <input type="text" class="form-control" id="email" placeholder="ingrese un correo elecrtonico">
                <label >Telefono</label>
                <input type="text" class="form-control" id="phone" placeholder="ingrese un telefono">
                <label >Nickname</label>
                <input type="text" class="form-control" id="nickname" placeholder="ingrese un nombre de usuario">
                <label >Contraseña</label>
                <input type="password" class="form-control" id="pass" placeholder="ingrese una contraseña">               
              </div>
              <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
        <div role="tabpanel" class="tab-pane" id="modificacion">...</div>
      </div>
    
    </div>

{% endblock %}